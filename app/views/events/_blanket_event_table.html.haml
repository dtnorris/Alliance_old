%table.table.xp-table
  %tr
    /%th Name
    /%th Event Type
    %th Date
    %th Applied?
    %th
    / - if @chapter && !@user
    /   %th
    /   %th
    / - if @user
    /   %th

  - @goblin_events.reverse.each do |event|
    - chapter = Chapter.find(event.chapter_id)
    - event_type = EventType.find(event.event_type_id)
    %tr
      /%td= event.name
      /%td= EventType.find(event.event_type_id).name
      %td= event.nice_date
      / - if event.applied == true
      /   %td.ln Yes
      / - else
      /   %td.ln No
      - if @chapter and !@user
        - if event.applied == true
          %td= button_to 'Yes - Applied', @event, class: "btn", :disabled => true
        - else
          %td= link_to 'No - Apply', chapter_event_path(@chapter.id,event.id), class: "btn", method: :put
      - if @chapter and !@user
        %td= link_to 'View Attendees', chapter_event_path(@chapter.id,event.id), class: "btn"
      - if @user
        %td= link_to 'Attend', user_event_path(@user.id,event.id), class: "btn"

