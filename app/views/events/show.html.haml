%h1 Event Details
%p#notice= notice

- if session[:chapter_id_for_new_user]
  - path = @chapter
- else
  - path = events_path
%ul.nav.nav-tabs
  %li= link_to 'Back', path, class: "btn"

.span3
  %table.table
    %tr
      %th Name:
      %td= @event.name
    %tr
      %th Date:
      %td= @event.date
    %tr
      %th Chapter:
      %td= Chapter.find(@event.chapter_id).name
    %tr
      %th Event Type:
      %td= EventType.find(@event.event_type_id).name
    %tr
      %th Applied?
      - if @event.applied != true
        %td false
      - else
        %td= @event.applied

.span3
  = render 'patron_xps/new_patron_from_chapter'

.span7
  = render 'patron_xps/event_patrons'