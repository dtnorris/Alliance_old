-if @user
  %h1= "Attend " + @chapter.name + " event on " + @event.date.to_s + " with:"
  .error1= notice
  %ul.nav.nav-tabs
    %li= link_to 'Back', user_chapter_events_path(@user.id,@chapter.id), class: "btn"

  = render 'attendees/form'

-else
  %h1 Event Details

  - if @chapter
    - path = chapter_events_path(@chapter.id)
  - else
    - path = events_path
  %ul.nav.nav-tabs
    %li= link_to 'Back', path, class: "btn"
  %p#notice= notice

  .span3
    %table.table
      %tr
        %th Name:
        %td= @event.name
      %tr
        %th Date:
        %td= @event.date
      %tr
        %th Chapter:
        %td= Chapter.find(@event.chapter_id).name
      %tr
        %th Event Type:
        %td= EventType.find(@event.event_type_id).name
      %tr
        %th Applied?
        - if @event.applied != true
          %td false
        - else
          %td= @event.applied

  .span3
    = render 'attendees/form'

  .span7
    = render 'attendees/event_attendees'