/ -if @chapter
-if @chapter
  %h1= 'Events for ' + @chapter.name

  %ul.nav.nav-tabs
    -if @user
      %li= link_to 'Back', @user, class: "btn"
    -else
      = render 'chapters/chapter_navbar'
      %p#notice= notice

  / -if @chapter && !@user
  /   = link_to 'New Event', new_chapter_event_path(@chapter.id), class: "btn"
  /   %p

-else
  %h1 All Alliance Events
  %p#notice= notice

=search_form_for(@search) do |f|
  = f.condition_fields do |c|
    = render 'layouts/condition_fields', f: c
  -if @chapter
    = f.hidden_field :chapter_id, :value => @chapter.id
  = link_to_add_fields "Add Search Condition", f, :condition
  = f.submit 'Search', class: "btn"
  -if @chapter && !@user
    = link_to 'New Event', new_chapter_event_path(@chapter.id), class: "btn"

= render 'event_table'

