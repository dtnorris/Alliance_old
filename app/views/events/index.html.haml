-if @chapter
  -if @user
    = render 'users/navbar'
    %p
      %b= "#{@chapter.name} notes on you:"
    %p
      = Member.find_by_user_id_and_chapter_id(@user.id, @chapter.id).notes
  -else
    = render 'chapters/navbar'

-else
  %h1 All Alliance Events

=search_form_for(@search) do |f|
  = f.condition_fields do |c|
    = render 'layouts/condition_fields', f: c
  -if @chapter
    = f.hidden_field :chapter_id, :value => @chapter.id
  = link_to_add_fields "Add Search Condition", f, :condition
  = f.submit 'Search', class: "btn"
  -if @chapter && !@user
    = link_to 'New Event', new_chapter_event_path(@chapter.id), class: "btn"

= will_paginate @events
= render 'table'
= will_paginate @events

