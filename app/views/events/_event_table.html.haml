%table.table.xp-table
  %tr
    %th Chapter
    %th Name
    %th Xp value
    %th Date
    %th Applied?
    - if @in_chapter_show
      %th
      %th
      %th
    - if @in_user_show
      %th

  - @events.reverse.each do |event|
    - chapter = Chapter.find(event.chapter_id)
    %tr
      %td= chapter.name
      %td= event.name
      %td.ln= event.xp_value
      %td= event.date
      - if event.applied == true
        %td.ln Yes
      - else
        %td.ln No
      - if @in_chapter_show or @in_national_show
        %td= link_to 'View', event, class: "btn"
      - if @in_chapter_show
        %td= link_to 'Apply Event', apply_event_path(event), class: "btn", method: :put
        /%td= link_to 'Edit', edit_event_path(event), class: "btn"
        %td= link_to 'Destroy', event, :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "btn"
      - if @in_user_show
        %td= link_to 'Attend', new_for_chapter_patron_xp_path(event.id), class: "btn"

