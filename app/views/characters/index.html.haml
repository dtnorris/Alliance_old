-if @chapter
  %h1= 'Characters for ' + @chapter.name
  %p
  = render 'chapters/chapter_navbar'

-else
  %h1 All Alliance Characters
  %p

=search_form_for(@search) do |f|
  = f.condition_fields do |c|
    = render 'layouts/condition_fields', f: c
  -if @chapter
    = f.hidden_field :chapter_id, :value => @chapter.id
  = link_to_add_fields "Add Search Condition", f, :condition
  = f.submit 'Search', class: "btn"
  / -if @chapter && !@user
  /   = link_to 'New Event', new_chapter_event_path(@chapter.id), class: "btn"
    
= render 'character_table'