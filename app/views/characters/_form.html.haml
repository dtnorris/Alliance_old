= simple_form_for(@character) do |f|
  = f.error_notification

  .form-inputs
    = f.hidden_field :user_id, value: @user.id
    = f.input :home_chapter, :label => 'Home Chapter:', :collection => Character.memberships_of_user(@user.id), :include_blank => false
    = f.input :name, :label => 'Character Name:'
    = f.input :race_id, :label => 'Race:', :collection => Race.all
    = f.input :char_class_id, :label => 'Character Class:', :collection => CharClass.all
    = f.button :submit
    %p
    = f.label :name, :label => 'Body Points'
    %td= @character.body_points
    %p
    = f.label :name, :label => 'Unspent Build:'
    %td= (@character.build_points - @character.spent_build) if @character.spent_build
    %p
    = f.label :name, :label => 'Spent Build:'
    %td= @character.spent_build
    / = f.label :name, :label => 'Experience Points:'
    / %td= @character.experience_points