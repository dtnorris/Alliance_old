.form-horizontal
  = simple_form_for(@character) do |f|
    = f.error_notification

    .form-inputs
      = f.hidden_field :user_id, value: @user.id
      -if @character.id
        = f.input :chapter_id, :label => 'Home Chapter:', :collection => @chapters, :include_blank => false
      -else 
        = f.input :chapter_id, :lable => 'Home Chapter:', :collection => [@chapter], :include_blank => false
      = f.input :name, :label => 'Character Name:'
      = f.input :race_id, :label => 'Race:', :collection => Race.all
      = f.input :char_class_id, :label => 'Character Class:', :collection => CharClass.all
    .form-actions
      = f.button :submit