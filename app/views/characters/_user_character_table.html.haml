#character_table
  %table.table.users-table.xp-table
    %tr
      %th
      %th Name: 
      %th Race:
      %th Class:
      %th Level:  
      %th Home Chapter:
    - @characters = Character.find_all_by_user_id(@user.id) unless @characters
    - @characters.each do |character|
      %tr
        %td= link_to 'View', character_path(character), class: "btn"
        %td= character.name
        %td= Race.find_by_id(character.race_id).name if Race.find_by_id(character.race_id)
        %td= CharClass.find_by_id(character.char_class_id).name if Race.find_by_id(character.race_id)
        %td.ln= ((character.build_points - 5) / 10)
        %td= Chapter.find(character.home_chapter).name