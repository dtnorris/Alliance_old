= render 'deaths/routing'
= simple_form_for(@death) do |f|
  = f.error_notification

  .form-inputs
    = f.button :submit, 'Buyback Death', id: 'buyback_death'
    = f.hidden_field :buyback, value: true
    = f.hidden_field :regen_css, value: false
    = f.hidden_field :character_id, value: @character.id
    = f.hidden_field :chapter_id, value: @character.chapter_id
