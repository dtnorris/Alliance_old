/    %td= link_to 'Long Weekend', xp_long_weekend_character_path(@character), class: "btn", method: :put

%table.table.xp-table
  %tr
    %th Start Build:
    %th Final Build:
    %th Build Gained:
    %th Start XP:
    %th Final XP:
    %th Reason Added:
  - all_xp = @xp_tracks
  - all_xp.reverse.each do |xp|
    %tr
      %td.ln= xp.start_build
      %td.ln= xp.end_build
      %td.ln= xp.end_build - xp.start_build
      %td.ln= xp.start_xp
      %td.ln= xp.end_xp
      %td= xp.reason
